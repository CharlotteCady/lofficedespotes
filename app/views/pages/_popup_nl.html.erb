<!-- Modal -->
<div id="popup_nl">
  <div class="modal fade text-center" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <div id="desktop-subscription" class="hidden-xs">
            <p class="modal-title home-subheader" id="myModalLabel">Inscrivez-vous</p>
          </div>
          <div id="mobile-subscription" class="visible-xs">
            <p class="modal-title home-subheader" id="myModalLabel">Inscrivez-vous</p>
          </div>
          <p id="content-nl">Recevez nos bons plans 1 fois / semaine</p>
        </div>
        <div class="modal-body">
          <div id="desktop" class="hidden-xs">
            <div id="mc_embed_signup form-group">
              <form action="//rocks.us10.list-manage.com/subscribe/post?u=93a8a8570acd0e6bdaf4f34e7&amp;id=385b3b77fa" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">
                  <input type="email" name="EMAIL" class="email text-center" id="mce-EMAIL" placeholder="Inscrivez-vous à notre newsletter (c'est gratuit)" required>
                  <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                  <input type="submit" value="OK" name="subscribe" id="mc-embedded-subscribe" class="">
                </div>
              </form>
            </div>
          </div>
          <div id="mobile" class="visible-xs">
            <div id="mc_embed_signup form-group">
              <form action="//rocks.us10.list-manage.com/subscribe/post?u=93a8a8570acd0e6bdaf4f34e7&amp;id=385b3b77fa" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">
                  <input type="email" name="EMAIL" class="email text-center" id="mce-EMAIL" placeholder="Inscrivez-vous à notre newsletter (c'est gratuit)" required>
                  <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                  <input type="submit" value="OK" name="subscribe" id="mc-embedded-subscribe" class="">
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <ul class="list-inline text-center">
            <li>
              <div id="facebook">
                <%= link_to "https://www.facebook.com/workuper/", target: "blank" do %>
                  <i class="fa fa-facebook"></i>
                <% end %>
              </div>
            </li>
            <li>
              <div id="twitter">
                <%= link_to "https://twitter.com/Workuper", target: "blank" do %>
                  <i class="fa fa-twitter"></i>
                <% end %>
              </div>
            </li>
            <li>
              <div id="linkedin">
                <%= link_to "https://www.linkedin.com/company/workup-trouvez-votre-job-idéal", target: "blank" do %>
                  <i class="fa fa-linkedin"></i>
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>