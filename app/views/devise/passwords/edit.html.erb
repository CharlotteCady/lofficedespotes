<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
      <div class="white mini-padded" id="pourquoi-se-connecter">
        <p class="home-header text-center">Changer votre mot de passe</p>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirmez votre nouveau mot de passe", required: true %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Valider", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
