<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">

      <div id="signup">
        <p class="home-header">INSCRIPTION</p>
        <p class="details">Retrouvez vos solutions préférées dans vos favoris, les initiatives qui vous correspondent, nos bons plans et offres spéciales pour vous aider dans votre transition pro.</p>
        <% if devise_mapping.omniauthable? %>
          <% resource_class.omniauth_providers.each do |provider| %>
            <% if provider.to_s == "facebook" %>
              <%= link_to "S'inscrire avec Facebook", omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook" %>
            <% else %>
              <%= link_to "S'inscrire' avec #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
            <% end %>
          <% end %>
        <% end %>

        <p>-- Ou créez votre profil --</p>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, required: true, autofocus: true, placeholder: "Nom d'utilisateur", label: false %>
            <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
            <%= f.input :password, required: true, placeholder: "Mot de passe, #{@minimum_password_length} caractères minimum", label: false %>
            <%= f.input :password_confirmation, required: true, placeholder: "Confirmation Mot de passe", label: false %>
          </div>
          <ul class="list-inline">
            <li>
              <div class="form-actions">
                <%= f.button :submit, "Créer mon Compte", class: "btn btn-primary" %>
              </div>
              <% end %>
            </li>
            <li>
              <% if devise_mapping.registerable? %>
                <%= link_to "J'ai déjà un compte", new_session_path(resource_name), class: "btn btn-empty" %>
              <% end %>
            </li>
          </ul>
      </div>
    </div>
  </div>
</div>