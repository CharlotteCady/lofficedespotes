<%= simple_form_for(@event, html: { multipart: true }) do |event| %>
	<div class="col-xs-12 col-md-8">
		<div class="white-block">
		  <%= event.input :title, label: "Titre", placeholder: 'Startup Career Day, le salon de recrutement des startups et du digital' %>
		</div>
		<div class="white-block">
		  <%= event.input :description, label: "Description", as: :bootsy, editor_options: { font_styles: false, color: false, image: false, html: true } ,  placeholder: "Qu'est-ce que c'est ? Pour qui ? Comment il se déroulera ? etc." %>
		</div>
		<div class="white-block">
		  <%= event.input :address, label: "Adresse de l'événement" %>


		</div>
	</div>
	<div class="col-xs-12 col-md-4">
		<div class="white-block">
		  <%= event.input :subscription_link, label: "Lien d'inscription", placeholder: 'https://www.eventbrite.fr/e/billets-startup-career-day-2017', as: :url %>
		  <%= event.input :price, label: "Prix", placeholder: '5 €' %>
		</div>
		<div class="white-block">
		  <%= event.input :date, label: "Date", as: :date, start_year: Date.today.year, end_year: Date.today.year + 1, order: [:day, :month, :year] %>
		  <%= event.input :time, label: "Heure", as: :time, minute_step: 15 %>
		</div>
		<div class="white-block">
		  <%= event.input :organiser, label: "Nom de l'organisateur", placeholder: 'Startup Career' %>
		  <%= event.input :website, label: "Site internet de l'organisateur", placeholder: 'http://startupcareers.fr/', as: :url %>
		</div>
		<div class="white-block">
	       <ul>
	            <%= event.input :category, label: "Catégorie" do %>
	          <li>
	            <%= check_box_tag 'event[category][]', 'Trouver sa voie', checked_event_category('Trouver sa voie'), id: 'category_trouver_sa_voie' %>
	            <%= label_tag 'category_trouver_sa_voie', 'Trouver sa voie' %>
	          </li>
	          <li>
	            <%= check_box_tag 'event[category][]', 'Trouver un job', checked_event_category('Trouver un job'), id: 'category_trouver_un_job' %>
	            <%= label_tag 'category_trouver_un_job', 'Trouver un job' %>
	          </li>
	          <li>
	            <%= check_box_tag 'event[category][]', 'Changer de métier', checked_event_category('Changer de métier'), id: 'category_changer_de_metier' %>
	            <%= label_tag 'category_changer_de_metier', 'Changer de métier' %>
	          </li>
	          <li>
	            <%= check_box_tag 'event[category][]', 'Changer de boite', checked_event_category('Changer de boite'), id: 'category_changer_de_boite' %>
	            <%= label_tag 'category_changer_de_boite', 'Changer de boite' %>
	          </li>
	          <li>
	            <%= check_box_tag 'event[category][]', 'Créer sa boite', checked_event_category('Créer sa boite'), id: 'category_creer_sa_boite' %>
	            <%= label_tag 'category_creer_sa_boite', 'Créer sa boite' %>
	            <% end %>
	          </li>
	       </ul>
	    </div>
	</div>
	<div class="col-xs-12 col-md-8">
		<div id="btn-enter" class="text-center">
		  <%= event.submit(value: (@event.new_record? ? "Créer l'événement" : "Modifier l'événement"), class: "btn btn-primary") %>
		</div>
	</div>
<% end %>