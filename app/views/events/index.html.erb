<% content_for(:title) do %>
  L'agenda de l'emploi et la transition pro | WorkUp
<% end %>

<% content_for(:meta_description) do %>
  Découvrez tous les événements liés à l'emploi, l'orientation, la reconversion et création d'entreprise près de chez vous
<% end %>

<header class="hidden-xs hidden-sm">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<h1>L'agenda emploi</h1>
				<%= link_to "Créer un événement", new_event_path, class: "btn btn-primary", target: "blank" %>
				<!-- <p>Des ateliers, conférences, forums, salons, liés à l'emploi, l'orientation, la reconversion et la création d'entreprise près de chez vous</p> -->
			</div>
		</div>
	</div>
</header>

<main>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-3">
				<div id="filter-event" class="white">
					<%= form_tag(events_path, method: "get", action: "index", id: "search-event", class: "form-inline") do %>
					  <div class="form-group">
					    <%= select_tag(:category, options_for_select(@categories), prompt: "Catégorie", class: "form") %>
					  </div>
					  <div class="form-group">
					    <%= text_field_tag :city, params[:city], placeholder: "Ville", class: "form" %>
					  </div>
					    <%= submit_tag("Chercher", class: "btn btn-primary") %>
					<% end %>
				</div>
			</div>
			<div class="col-xs-12 col-md-9 events">
				
				<% @events.each do |event| %>
					<span class="date"><%= l(event.date, format: '%A %d %B').capitalize %></span>
					<div class="row white event-item">
						<div class="col-xs-2">
							<p class="time"><%= event.time.strftime("%kh%M") %></p>
						</div>
						<div class="col-xs-10">
							<h2 class="sub-title"><%= link_to event.title, event_path(event.id), target: "blank" %></h2>
							<p class="content-title">Par <%= event.organiser %></p>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</main>

<%= render "pages/footer" %>