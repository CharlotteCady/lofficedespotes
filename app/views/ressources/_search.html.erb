<div id="search">
<%= form_tag(ressources_path, method: "get", action: "index", id: "search-form", class: "form-inline") do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Mots Clefs", class: "form text-long" %>
    </div>
    <div class="form-group">
      <%= select_tag(:category, options_for_select([["Chercher un job"], ["Changer de métier"], ["Changer de boite"], ["Créer sa boite"], ["Coup de coeur"]]), prompt: " ----  Catégorie  ---- ", class: "form") %>
    </div>
    <div class="form-group">
      <%= select_tag(:subcategory, options_for_select([["S'inspirer"], ["S'informer"], ["Se Faire Aider"], ["Se Former"], ["Réseauter"], ["Postuler"], ["Recruter"], ["Profiter"]]), prompt: " ----  Etapes  ---- ", class: "form") %>
    </div>
      <%= submit_tag("Chercher", class: "btn btn-primary") %>
  <% end %>
</div>
