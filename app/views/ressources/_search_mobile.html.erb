<div id="search">
<%= form_tag(ressources_path, method: "get", action: "index", id: "search-form", class: "form-inline") do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Mots Clefs", class: "form text-long" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :category, params[:category], class: "form hidden" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :subcategory, params[:subcategory], class: "form hidden" %>
    </div>
      <%= submit_tag("Chercher", class: "btn btn-primary") %>
  <% end %>
</div>
