<% content_for(:title) do %>
  <% "#{@category_page} | WorkUp" %>
<% end %>

<%content_for(:meta_description) do %>
  <% if @category_page == @categories[0] %>
    Les meilleurs événements emploi, sites de recrutement, coach, conseils d'experts pour trouver un job qui vous plaît
  <% elsif @category_page == @categories[1] %>
    Les meilleures formations, témoignages, conseils, événements pour changer de métier sereinement
  <% elsif @category_page == @categories[2] %>
    Les meilleurs conseils pratiques et outils pour trouver une entreprise où vous pourrez enfin vous épanouir
  <% elsif @category_page == @categories[3] %>
    Des conseils, rencontres, outils pratiques et événements pour créer sa boite ou devenir indépendant simplement
  <% elsif @category_page == @categories[4] %>
    Des témoignages d'entreprises et de salariés, des conseils, des événements et plus encore pour intraprendre facilement
  <% else %>
    Osez passer à l'action avec nos outils, conseils, témoignages, événements pour trouver un job qui vous rend heureux(se)
  <% end %>
<% end %>

<%content_for(:meta_image) do %>
  <% @category_page.split.join.downcase.gsub("é", "e") + ".png" %>
<% end %>

<!-- MENU COTE POUR LES GRANDS ET MOYENS ECRANS -->
<div class="sidebar hidden-xs">
  <%= render "ressource_sidebar_simple" %>
</div>

<!-- SOUS MENU TOP POUR LES PETITS ECRANS -->
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="sidebar visible-xs">
        <%= render "second_nav" %>
      </div>
    </div>
  </div>
</div>

<!-- CONTENU BANNIERE, BARRE DE RECHERCHE ET LISTE DES ARTICLES -->
<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-offset-2 col-md-10">
      <div class="content">
        <div id="category-description" class="padded text-center" style="background-image: url(<%= asset_path(@category_page.split.join.downcase.gsub("é", "e") + ".png") %>); background-repeat: repeat;">

          <h1><%= @category_page %></h1>
          <% if @category_page == @categories[0] %>
            <p>Les meilleurs événements emploi, sites de recrutement, structures d'accompagnement, conseils d'experts pour trouver un job qui vous plaît</p>
          <% elsif @category_page == @categories[1] %>
            <p>Les meilleures formations, témoignages, conseils, événements pour changer de métier sereinement</p>
          <% elsif @category_page == @categories[2] %>
            <p>Les meilleurs conseils pratiques et outils pour trouver une entreprise où vous pourrez enfin vous épanouir</p>
          <% elsif @category_page == @categories[3] %>
            <p>Des conseils, rencontres, outils pratiques et événements pour créer sa boite ou devenir indépendant simplement</p>
          <% elsif @category_page == @categories[4] %>
            <p>Des témoignages d'entreprises et de salariés, des conseils, des événements et plus encore pour intraprendre facilement</p>
          <% else %>
            <p>quote</p>
          <% end %>
          <div class="row">
            <div class="col-xs-12">
              <ul class= "list-inline">
                <% @subcategories.each do |subcat| %>
                <li>
                  <%= button_to "#{subcat}", {controller: "ressources", action: "category", category: "#{@category_page}", subcategory: "#{subcat}"} , class: "btn btn-transparent"  %>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

        <div class="searchbar hidden-xs">
          <%= render "search_category_page" %>
        </div>

        <div class="col-xs-12">
          <div class="last_ressources">
            <% if params[:search] %>
              <p class="title first-title">Résultats de la recherche</p>
            <% elsif params[:subcategory] %>
              <p class="title first-title"> <%= @category_page %> | <%= params[:subcategory] %></p>
            <% else %>
              <p class="title first-title">Les nouvelles découvertes pour <%= @category_page %></p>
            <% end %>
            <div class="listing_ressources">
              <% if @ressources.blank? %>
                <p id="sorry">Il n'y a pas encore de résultats pour votre recherche, envoyez nous un petit message pour nous dire ce que vous recherchez :)</p>
              <% else %>
                <% @ressources.each do |ress| %>
                <div class="row">
                  <div class="col-xs-2">
                    <ul class= "list-inline">
                      <li>
                        <div class="votes">
                          <% if current_user.liked? ress %>
                            <%= link_to dislike_ressource_path(ress), method: :put, class: "dislike_ressource btn-vote" do %>
                              <i class="fa fa-heart"></i>
                            <% end %>
                          <% else %>
                            <%= link_to like_ressource_path(ress), method: :put, class: "like_ressource btn-vote" do %>
                              <i class="fa fa-heart-o"></i>
                            <% end %>
                          <% end %>
                          <p class="vote_count"><%= ress.score %></p>
                        </div>
                      </li>
                      <li>
                        <div class="comments">
                          <i class="fa fa-comment-o"></i>
                          <p><%= ress.comments.count %></p>
                        </div>
                      </li>
                      <li>
                        <%= image_tag ress.logo.url(:thumb), class: "logo" %>
                      </li>
                    </ul>
                  </div>
                  <div class="col-xs-10">
                    <h2 class= "sub-title"><%= link_to ress.title, ressource_path(ress.id) %></h2>
                    <p class="content-title"><%= ress.content.split(".").first %>.</p>
                  </div>
                </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

